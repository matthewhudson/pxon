{
  "name": "pxon",
  "packageManager": "pnpm@10.30.1",
  "version": "2.0.0",
  "type": "module",
  "homepage": "https://github.com/matthewhudson/pxon",
  "repository": {
    "type": "git",
    "url": "https://github.com/matthewhudson/pxon"
  },
  "description": "A library for handling pixel data in a standardized format",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "author": "Matthew Hudson <matthud@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/js": "^9.28.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^15.4.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "build": "pnpm run clean && tsup",
    "clean": "rm -rf dist coverage",
    "dev": "tsup --watch",
    "docs": "typedoc --out docs src/index.ts",
    "docs:serve": "npx serve docs",
    "lint": "eslint 'src/**/*.{js,ts,mjs}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,mjs}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,mjs}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,mjs}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run validate",
    "prepare": "pnpm run build",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm run lint && pnpm run format:check && pnpm run typecheck && pnpm run test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run validate && pnpm run build && changeset publish"
  }
}
